// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ (c++11) build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clang++-10 (c++20) build active file",
            "command": "/usr/bin/clang++-10",
            "args": [
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "delete output file",
            "command": "rm",
            "args": [
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "presentation": {
                "reveal": "silent",
            }
        }
    ],
    "version": "2.0.0"
}